                                                  Foreground="{StaticResource Gray600}" Margin="0,0,0,16" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <local:ExtendedSwitch CheckedTrackBrush="{StaticResource SuccessBrush}" 
                                                                TrackBrush="{StaticResource SuccessFalseBrush}"
                                                                SwitchSize="Small" IsChecked="True" AnimationStyle="EaseInOut"/>
                                            <TextBlock Text="Enabled" FontSize="12" Margin="12,0,0,0" 
                                                      VerticalAlignment="Center" Foreground="{StaticResource SuccessBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="1" Style="{StaticResource FeatureCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="🔒 Security" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                                        <TextBlock Text="Enhanced protection and monitoring" FontSize="13" 
                                                  Foreground="{StaticResource Gray600}" Margin="0,0,0,16" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <local:ExtendedSwitch CheckedTrackBrush="{StaticResource RoseBrush}" 
                                                                TrackBrush="{StaticResource RoseFalseBrush}"
                                                                SwitchSize="Small" AnimationStyle="EaseInOut"/>
                                            <TextBlock Text="Disabled" FontSize="12" Margin="12,0,0,0" 
                                                      VerticalAlignment="Center" Foreground="{StaticResource Gray500}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Column="2" Style="{StaticResource FeatureCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="📈 Beta Features" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
                                        <TextBlock Text="Try experimental functionality" FontSize="13" 
                                                  Foreground="{StaticResource Gray600}" Margin="0,0,0,16" TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <local:ExtendedSwitch CheckedTrackBrush="{StaticResource SecondaryBrush}" 
                                                                TrackBrush="{StaticResource SecondaryFalseBrush}"
                                                                SwitchSize="Small" IsChecked="True" AnimationStyle="EaseInOut"/>
                                            <TextBlock Text="Beta" FontSize="12" Margin="12,0,0,0" 
                                                      VerticalAlignment="Center" Foreground="{StaticResource SecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>

                        <!-- Mobile Style -->
                        <StackPanel>
                            <TextBlock Style="{StaticResource SubHeaderStyle}" Text="📱 Mobile App Style"/>
                            <Border Background="{StaticResource Gray800}" CornerRadius="16" Padding="24" MaxWidth="400" HorizontalAlignment="Center">
                                <StackPanel>
                                    <StackPanel Style="{StaticResource SwitchDemoRowStyle}">
                                        <TextBlock Text="🔔 Push Notifications" Foreground="White" FontSize="15" Width="180"/>
                                        <local:ExtendedSwitch CheckedTrackBrush="#00D4AA" 
                                                            TrackBrush="{StaticResource Gray600}"
                                                            IsChecked="True" HasShadow="True" AnimationStyle="EaseInOut"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource SwitchDemoRowStyle}">
                                        <TextBlock Text="📍 Location Services" Foreground="White" FontSize="15" Width="180"/>
                                        <local:ExtendedSwitch CheckedTrackBrush="#FF6B6B" 
                                                            TrackBrush="{StaticResource Gray600}"
                                                            HasShadow="True" AnimationStyle="EaseInOut"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource SwitchDemoRowStyle}">
                                        <TextBlock Text="🎵 Sound Effects" Foreground="White" FontSize="15" Width="180"/>
                                        <local:ExtendedSwitch CheckedTrackBrush="#4ECDC4" 
                                                            TrackBrush="{StaticResource Gray600}"
                                                            IsChecked="True" HasShadow="True" AnimationStyle="EaseInOut"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource SwitchDemoRowStyle}">
                                        <TextBlock Text="🌙 Do Not Disturb" Foreground="White" FontSize="15" Width="180"/>
                                        <local:ExtendedSwitch CheckedTrackBrush="#A8E6CF" 
                                                            TrackBrush="{StaticResource Gray600}"
                                                            HasShadow="True" AnimationStyle="EaseInOut"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
