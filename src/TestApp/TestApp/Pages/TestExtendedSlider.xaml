<Page
    x:Class="TestApp.Pages.TestExtendedSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenSilver.ControlsKit.Controls;assembly=OpenSilver.ControlsKit.Controls">

    <Page.Resources>
        <!-- Modern Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4F46E5"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#4338CA"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E0E7FF"/>

        <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessHoverBrush" Color="#059669"/>
        <SolidColorBrush x:Key="SuccessLightBrush" Color="#D1FAE5"/>

        <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
        <SolidColorBrush x:Key="WarningHoverBrush" Color="#D97706"/>
        <SolidColorBrush x:Key="WarningLightBrush" Color="#FEF3C7"/>

        <SolidColorBrush x:Key="InfoBrush" Color="#06B6D4"/>
        <SolidColorBrush x:Key="InfoHoverBrush" Color="#0891B2"/>
        <SolidColorBrush x:Key="InfoLightBrush" Color="#CFFAFE"/>

        <SolidColorBrush x:Key="SecondaryBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="SecondaryHoverBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="SecondaryLightBrush" Color="#EDE9FE"/>

        <SolidColorBrush x:Key="RoseBrush" Color="#F43F5E"/>
        <SolidColorBrush x:Key="RoseHoverBrush" Color="#E11D48"/>

        <!-- Sophisticated Colors -->
        <SolidColorBrush x:Key="SageBrush" Color="#8FA68E"/>
        <SolidColorBrush x:Key="OceanBrush" Color="#7B9BB8"/>
        <SolidColorBrush x:Key="TerraBrush" Color="#B8906B"/>
        <SolidColorBrush x:Key="LavenderBrush" Color="#A5A0C2"/>

        <!-- Neutral Colors -->
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="Gray300" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="Gray400" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="Gray600" Color="#4B5563"/>
        <SolidColorBrush x:Key="Gray700" Color="#374151"/>
        <SolidColorBrush x:Key="Gray800" Color="#1F2937"/>
        <SolidColorBrush x:Key="Gray900" Color="#111827"/>

        <!-- Modern Styles -->
        <Style x:Key="HeroTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="42"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Gray900}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Gray700}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="ModernSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Margin" Value="0,0,0,32"/>
        </Style>

        <Style x:Key="FeatureCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="CategoryBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="CategoryTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DemoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource Gray700}"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <Style x:Key="DemoRowStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="ValueDisplayStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Margin" Value="16,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="GradientBackgroundStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F8FAFC" Offset="0"/>
                        <GradientStop Color="#F1F5F9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Border Style="{StaticResource GradientBackgroundStyle}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="32" MaxWidth="1400">

                <!-- Hero Section -->
                <StackPanel HorizontalAlignment="Center" Margin="0,40,0,80">
                    <TextBlock Text="ExtendedSlider" Style="{StaticResource HeroTitleStyle}"/>
                    <Border Background="{StaticResource PrimaryBrush}" 
                           CornerRadius="25" Padding="20,10">
                        <TextBlock Text="OpenSilver.ControlsKit" 
                                  Foreground="White" FontWeight="Bold" FontSize="16"
                                  HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Live Demo Grid -->
                <Grid Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Quick Demo Card 1 - Colors with Borders -->
                    <Border Grid.Column="0" Style="{StaticResource FeatureCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="🎨 Bordered Tracks" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <StackPanel>
                                <local:ExtendedSlider Value="75" Maximum="100" SliderSize="Medium"
                                                     FillBrush="{StaticResource PrimaryBrush}"
                                                     TrackBrush="White"
                                                     TrackBorderBrush="{StaticResource PrimaryBrush}"
                                                     TrackBorderThickness="2"
                                                     IsAnimated="True"/>
                                <local:ExtendedSlider Value="50" Maximum="100" SliderSize="Medium"
                                                     FillBrush="{StaticResource SuccessBrush}"
                                                     TrackBrush="White"
                                                     TrackBorderBrush="{StaticResource SuccessBrush}"
                                                     TrackBorderThickness="2"
                                                     IsAnimated="True"/>
                                <local:ExtendedSlider Value="25" Maximum="100" SliderSize="Medium"
                                                     FillBrush="{StaticResource WarningBrush}"
                                                     TrackBrush="White"
                                                     TrackBorderBrush="{StaticResource WarningBrush}"
                                                     TrackBorderThickness="2"
                                                     IsAnimated="True"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Quick Demo Card 2 - Sizes -->
                    <Border Grid.Column="2" Style="{StaticResource FeatureCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="📏 Size Options" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Small" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <local:ExtendedSlider Value="60" Maximum="100" SliderSize="Small"
                                                         FillBrush="{StaticResource SecondaryBrush}"
                                                         TrackBrush="{StaticResource Gray200}"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Medium" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <local:ExtendedSlider Value="60" Maximum="100" SliderSize="Medium"
                                                         FillBrush="{StaticResource SecondaryBrush}"
                                                         TrackBrush="{StaticResource Gray200}"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Large" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <local:ExtendedSlider Value="60" Maximum="100" SliderSize="Large"
                                                         FillBrush="{StaticResource SecondaryBrush}"
                                                         TrackBrush="{StaticResource Gray200}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Quick Demo Card 3 - Premium Styles -->
                    <Border Grid.Column="4" Style="{StaticResource FeatureCardStyle}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="✨ Premium Styles" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                            <StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Track Border" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <local:ExtendedSlider Value="70" Maximum="100" SliderSize="Medium"
                                                         FillBrush="{StaticResource InfoBrush}"
                                                         TrackBrush="White"
                                                         TrackBorderBrush="{StaticResource Gray400}"
                                                         TrackBorderThickness="1"
                                                         HasShadow="True"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Rounded + Shadow" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <local:ExtendedSlider Value="40" Maximum="100" SliderSize="Medium"
                                                         FillBrush="{StaticResource RoseBrush}"
                                                         TrackBrush="{StaticResource Gray200}"
                                                         CornerRadius="10"
                                                         HasShadow="True"/>
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Full Border Style" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                    <local:ExtendedSlider Value="85" Maximum="100" SliderSize="Medium"
                                                         FillBrush="{StaticResource LavenderBrush}"
                                                         TrackBrush="White"
                                                         TrackBorderBrush="{StaticResource SecondaryBrush}"
                                                         TrackBorderThickness="2"
                                                         ThumbBorderBrush="{StaticResource SecondaryBrush}"
                                                         ThumbBorderThickness="2"
                                                         HasShadow="True"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Main Features Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">

                        <!-- Sophisticated Colors -->
                        <Border Style="{StaticResource ModernSectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="SOPHISTICATED COLORS"/>
                                </Border>
                                <TextBlock Text="Premium Color Collection" Style="{StaticResource SectionHeaderStyle}"/>

                                <StackPanel>
                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="🌿 Sage"/>
                                        <local:ExtendedSlider x:Name="SageSlider" Value="65" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource SageBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource SageBrush}"
                                                             TrackBorderThickness="1"/>
                                        <TextBlock Text="{Binding ElementName=SageSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="🌊 Ocean"/>
                                        <local:ExtendedSlider x:Name="OceanSlider" Value="45" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource OceanBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource OceanBrush}"
                                                             TrackBorderThickness="1"/>
                                        <TextBlock Text="{Binding ElementName=OceanSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="🏺 Terra"/>
                                        <local:ExtendedSlider x:Name="TerraSlider" Value="80" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource TerraBrush}"
                                                             TrackBrush="{StaticResource Gray200}"/>
                                        <TextBlock Text="{Binding ElementName=TerraSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="🌸 Lavender"/>
                                        <local:ExtendedSlider x:Name="LavenderSlider" Value="35" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource LavenderBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource LavenderBrush}"
                                                             TrackBorderThickness="2"/>
                                        <TextBlock Text="{Binding ElementName=LavenderSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Size Variations -->
                        <Border Style="{StaticResource ModernSectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="SIZE OPTIONS"/>
                                </Border>
                                <TextBlock Text="Flexible Sizing System" Style="{StaticResource SectionHeaderStyle}"/>

                                <StackPanel>
                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Small"/>
                                        <local:ExtendedSlider x:Name="SmallSlider" Value="30" Maximum="100" SliderSize="Small"
                                                             FillBrush="{StaticResource PrimaryBrush}"
                                                             TrackBrush="{StaticResource Gray200}"/>
                                        <TextBlock Text="{Binding ElementName=SmallSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Medium"/>
                                        <local:ExtendedSlider x:Name="MediumSlider" Value="60" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource SuccessBrush}"
                                                             TrackBrush="{StaticResource Gray200}"/>
                                        <TextBlock Text="{Binding ElementName=MediumSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Large"/>
                                        <local:ExtendedSlider x:Name="LargeSlider" Value="85" Maximum="100" SliderSize="Large"
                                                             FillBrush="{StaticResource WarningBrush}"
                                                             TrackBrush="{StaticResource Gray200}"/>
                                        <TextBlock Text="{Binding ElementName=LargeSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Custom"/>
                                        <local:ExtendedSlider x:Name="CustomSlider" Value="45" Maximum="100" SliderSize="Custom"
                                                             TrackWidth="300" TrackHeight="10" ThumbSize="28"
                                                             FillBrush="{StaticResource InfoBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource InfoBrush}"
                                                             TrackBorderThickness="2"/>
                                        <TextBlock Text="{Binding ElementName=CustomSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">

                        <!-- Visual Effects -->
                        <Border Style="{StaticResource ModernSectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="VISUAL EFFECTS"/>
                                </Border>
                                <TextBlock Text="Premium Visual Enhancements" Style="{StaticResource SectionHeaderStyle}"/>

                                <StackPanel>
                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Track Border"/>
                                        <local:ExtendedSlider x:Name="TrackBorderSlider" Value="65" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource SecondaryBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource SecondaryBrush}"
                                                             TrackBorderThickness="2"
                                                             CornerRadius="2"/>
                                        <TextBlock Text="{Binding ElementName=TrackBorderSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Drop Shadow"/>
                                        <local:ExtendedSlider x:Name="ShadowSlider" Value="70" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource SecondaryBrush}"
                                                             TrackBrush="{StaticResource Gray200}"
                                                             HasShadow="True" CornerRadius="2"/>
                                        <TextBlock Text="{Binding ElementName=ShadowSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Rounded Track"/>
                                        <local:ExtendedSlider x:Name="RoundedSlider" Value="55" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource RoseBrush}"
                                                             TrackBrush="{StaticResource Gray200}"
                                                             CornerRadius="15"/>
                                        <TextBlock Text="{Binding ElementName=RoundedSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Full Premium"/>
                                        <local:ExtendedSlider x:Name="PremiumSlider" Value="80" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource InfoBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource InfoBrush}"
                                                             TrackBorderThickness="2"
                                                             ThumbBorderBrush="{StaticResource InfoBrush}"
                                                             ThumbBorderThickness="2"
                                                             HasShadow="True"
                                                             CornerRadius="5"/>
                                        <TextBlock Text="{Binding ElementName=PremiumSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Range Examples -->
                        <Border Style="{StaticResource ModernSectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="CUSTOM RANGES"/>
                                </Border>
                                <TextBlock Text="Flexible Value Ranges" Style="{StaticResource SectionHeaderStyle}"/>

                                <StackPanel>
                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="0-10 Scale"/>
                                        <local:ExtendedSlider x:Name="ScaleSlider" Value="7.5" Minimum="0" Maximum="10" SliderSize="Medium"
                                                             FillBrush="{StaticResource SuccessBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource Gray300}"
                                                             TrackBorderThickness="1"/>
                                        <TextBlock Text="{Binding ElementName=ScaleSlider, Path=Value, StringFormat='{}{0:F1}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Temperature"/>
                                        <local:ExtendedSlider x:Name="TempSlider" Value="22" Minimum="-10" Maximum="40" SliderSize="Medium"
                                                             FillBrush="{StaticResource WarningBrush}"
                                                             TrackBrush="{StaticResource Gray200}"/>
                                        <TextBlock Text="{Binding ElementName=TempSlider, Path=Value, StringFormat='{}{0:F0}°C'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Volume"/>
                                        <local:ExtendedSlider x:Name="VolumeSlider" Value="0.65" Minimum="0" Maximum="1" SliderSize="Medium"
                                                             FillBrush="{StaticResource InfoBrush}"
                                                             TrackBrush="{StaticResource Gray200}"/>
                                        <TextBlock Text="{Binding ElementName=VolumeSlider, Path=Value, StringFormat='{}{0:P0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Style="{StaticResource DemoLabelStyle}" Text="Price Range"/>
                                        <local:ExtendedSlider x:Name="PriceSlider" Value="1500" Minimum="100" Maximum="5000" SliderSize="Medium"
                                                             FillBrush="{StaticResource SecondaryBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource SecondaryBrush}"
                                                             TrackBorderThickness="1"/>
                                        <TextBlock Text="{Binding ElementName=PriceSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Real World Examples -->
                <Border Style="{StaticResource ModernSectionStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource CategoryBadgeStyle}">
                            <TextBlock Style="{StaticResource CategoryTextStyle}" Text="REAL WORLD"/>
                        </Border>
                        <TextBlock Text="Production-Ready Examples" Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Audio Mixer Panel -->
                        <StackPanel Margin="0,0,0,32">
                            <TextBlock Style="{StaticResource SubHeaderStyle}" Text="🎵 Professional Audio Mixer"/>
                            <Border Background="{StaticResource Gray100}" CornerRadius="16" Padding="24">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                        <TextBlock Text="🎤 Vocals" HorizontalAlignment="Center" FontWeight="Medium" Margin="0,0,0,8"/>
                                        <local:ExtendedSlider x:Name="VocalsSlider" Value="75" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource PrimaryBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource PrimaryBrush}"
                                                             TrackBorderThickness="1"
                                                             HasShadow="True"/>
                                        <TextBlock Text="{Binding ElementName=VocalsSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                        <TextBlock Text="🎸 Guitar" HorizontalAlignment="Center" FontWeight="Medium" Margin="0,0,0,8"/>
                                        <local:ExtendedSlider x:Name="GuitarSlider" Value="60" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource SuccessBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource SuccessBrush}"
                                                             TrackBorderThickness="1"
                                                             HasShadow="True"/>
                                        <TextBlock Text="{Binding ElementName=GuitarSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="0,0,16,0">
                                        <TextBlock Text="🥁 Drums" HorizontalAlignment="Center" FontWeight="Medium" Margin="0,0,0,8"/>
                                        <local:ExtendedSlider x:Name="DrumsSlider" Value="85" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource WarningBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource WarningBrush}"
                                                             TrackBorderThickness="1"
                                                             HasShadow="True"/>
                                        <TextBlock Text="{Binding ElementName=DrumsSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3">
                                        <TextBlock Text="🎹 Bass" HorizontalAlignment="Center" FontWeight="Medium" Margin="0,0,0,8"/>
                                        <local:ExtendedSlider x:Name="BassSlider" Value="45" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource InfoBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource InfoBrush}"
                                                             TrackBorderThickness="1"
                                                             HasShadow="True"/>
                                        <TextBlock Text="{Binding ElementName=BassSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>

                        <!-- System Settings -->
                        <StackPanel>
                            <TextBlock Style="{StaticResource SubHeaderStyle}" Text="⚙️ System Settings Dashboard"/>
                            <Border Background="White" BorderBrush="{StaticResource Gray200}" BorderThickness="1" 
                                   CornerRadius="16" Padding="24" MaxWidth="600" HorizontalAlignment="Center">
                                <StackPanel>
                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Text="🔆 Brightness" Style="{StaticResource DemoLabelStyle}"/>
                                        <local:ExtendedSlider x:Name="BrightnessSlider" Value="80" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource WarningBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource Gray300}"
                                                             TrackBorderThickness="1"/>
                                        <TextBlock Text="{Binding ElementName=BrightnessSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Text="🔊 Volume" Style="{StaticResource DemoLabelStyle}"/>
                                        <local:ExtendedSlider x:Name="SystemVolumeSlider" Value="65" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource InfoBrush}"
                                                             TrackBrush="White"
                                                             TrackBorderBrush="{StaticResource Gray300}"
                                                             TrackBorderThickness="1"/>
                                        <TextBlock Text="{Binding ElementName=SystemVolumeSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Text="🌡️ CPU Usage" Style="{StaticResource DemoLabelStyle}"/>
                                        <local:ExtendedSlider x:Name="CpuSlider" Value="35" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource SuccessBrush}"
                                                             TrackBrush="{StaticResource Gray200}"
                                                             IsAnimated="False"/>
                                        <TextBlock Text="{Binding ElementName=CpuSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>

                                    <StackPanel Style="{StaticResource DemoRowStyle}">
                                        <TextBlock Text="💾 Memory" Style="{StaticResource DemoLabelStyle}"/>
                                        <local:ExtendedSlider x:Name="MemorySlider" Value="55" Maximum="100" SliderSize="Medium"
                                                             FillBrush="{StaticResource SecondaryBrush}"
                                                             TrackBrush="{StaticResource Gray200}"
                                                             IsAnimated="False"/>
                                        <TextBlock Text="{Binding ElementName=MemorySlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                                   Style="{StaticResource ValueDisplayStyle}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>