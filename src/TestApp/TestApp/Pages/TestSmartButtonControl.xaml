        </Geometry>

        <!-- Harmonious Color Palette -->
        <!-- Primary Blue System -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#4F46E5"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#4338CA"/>
        <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E0E7FF"/>

        <!-- Secondary Colors (Muted tones) -->
        <SolidColorBrush x:Key="SuccessBrush" Color="#059669"/>
        <SolidColorBrush x:Key="SuccessHoverBrush" Color="#047857"/>
        <SolidColorBrush x:Key="SuccessLightBrush" Color="#D1FAE5"/>

        <SolidColorBrush x:Key="WarningBrush" Color="#D97706"/>
        <SolidColorBrush x:Key="WarningHoverBrush" Color="#B45309"/>
        <SolidColorBrush x:Key="WarningLightBrush" Color="#FEF3C7"/>

        <SolidColorBrush x:Key="HeartBrush" Color="#E91E63"/>
        <SolidColorBrush x:Key="HeartHoverBrush" Color="#C2185B"/>
        <SolidColorBrush x:Key="HeartLightBrush" Color="#FCE4EC"/>

        <SolidColorBrush x:Key="SecondaryBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="SecondaryHoverBrush" Color="#6D28D9"/>
        <SolidColorBrush x:Key="SecondaryLightBrush" Color="#EDE9FE"/>

        <SolidColorBrush x:Key="DownloadBrush" Color="#0891B2"/>
        <SolidColorBrush x:Key="DownloadHoverBrush" Color="#0E7490"/>
        <SolidColorBrush x:Key="DownloadLightBrush" Color="#CFFAFE"/>

        <SolidColorBrush x:Key="SlateBrush" Color="#475569"/>
        <SolidColorBrush x:Key="SlateHoverBrush" Color="#334155"/>
        <SolidColorBrush x:Key="SlateLightBrush" Color="#F1F5F9"/>

        <!-- Brand Colors (Subtle) -->
        <SolidColorBrush x:Key="MicrosoftBrush" Color="#0078D4"/>
        <SolidColorBrush x:Key="AppleBrush" Color="#1D1D1F"/>
        <SolidColorBrush x:Key="GoogleBrush" Color="#34A853"/>
        <SolidColorBrush x:Key="GitHubBrush" Color="#24292F"/>
        <SolidColorBrush x:Key="LinkedInBrush" Color="#0A66C2"/>
        <SolidColorBrush x:Key="VisualStudioBrush" Color="#5C2D91"/>

        <!-- Neutral Colors -->
        <SolidColorBrush x:Key="Gray50" Color="#F8FAFC"/>
        <SolidColorBrush x:Key="Gray100" Color="#F1F5F9"/>
        <SolidColorBrush x:Key="Gray200" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="Gray300" Color="#CBD5E1"/>
        <SolidColorBrush x:Key="Gray400" Color="#94A3B8"/>
        <SolidColorBrush x:Key="Gray500" Color="#64748B"/>
        <SolidColorBrush x:Key="Gray600" Color="#475569"/>
        <SolidColorBrush x:Key="Gray700" Color="#334155"/>
        <SolidColorBrush x:Key="Gray800" Color="#1E293B"/>

        <!-- Section Styles -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource Gray800}"/>
            <Setter Property="Margin" Value="0,8,0,20"/>
        </Style>

        <Style x:Key="SectionStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Gray200}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="CategoryBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="CategoryTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource Gray50}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="24" MaxWidth="1200">

                <!-- Hero Section -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,48">
                    <TextBlock Text="SmartButton" FontSize="32" FontWeight="Bold" 
                              Foreground="{StaticResource Gray800}" 
                              HorizontalAlignment="Center"/>
                    <Border Background="{StaticResource PrimaryBrush}" 
                           CornerRadius="20" Padding="16,8">
                        <TextBlock Text="OpenSilver.ControlsKit" 
                                  Foreground="White" FontWeight="Bold" FontSize="14"
                                  HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Two Column Layout -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">

                        <!-- Tech Brands -->
                        <Border Style="{StaticResource SectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="TECH BRANDS"/>
                                </Border>
                                <TextBlock Text="Technology Leaders" Style="{StaticResource SectionHeaderStyle}"/>
                                <StackPanel>
                                    <local:SmartButton ButtonText="Microsoft" FontSize="15"
                                                     IconGeometry="{StaticResource MicrosoftIcon}"
                                                     IconSize="20"
                                                     Width="280" Height="48" Margin="0,0,0,12"
                                                     Background="{StaticResource MicrosoftBrush}" 
                                                     HoverBackground="#106EBE"
                                                     Foreground="White" IconBrush="White"
                                                     CornerRadius="8"/>

                                    <local:SmartButton ButtonText="Apple" FontSize="15"
                                                     IconGeometry="{StaticResource AppleIcon}"
                                                     IconSize="20"
                                                     Width="280" Height="48" Margin="0,0,0,12"
                                                     Background="{StaticResource AppleBrush}" 
                                                     HoverBackground="#424245"
                                                     Foreground="White" IconBrush="White"
                                                     CornerRadius="8"/>

                                    <local:SmartButton ButtonText="Google" FontSize="15"
                                                     IconGeometry="{StaticResource GoogleIcon}"
                                                     IconSize="20"
                                                     Width="280" Height="48"
                                                     Background="{StaticResource GoogleBrush}" 
                                                     HoverBackground="#2D8E47"
                                                     Foreground="White" IconBrush="White"
                                                     CornerRadius="8"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Basic Buttons (Following original design) -->
                        <Border Style="{StaticResource SectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="BASIC COMPONENTS"/>
                                </Border>
                                <TextBlock Text="Basic Buttons" Style="{StaticResource SectionHeaderStyle}"/>
                                <StackPanel>
                                    <!-- Default button without corner radius -->
                                    <local:SmartButton ButtonText="Default Button" FontSize="15"
                                                     Width="280" Height="40" Margin="0,0,0,10" />

                                    <!-- Rounded corner button -->
                                    <local:SmartButton ButtonText="Rounded Corner Button" FontSize="15"
                                                     CornerRadius="20" Width="280" Height="40" Margin="0,0,0,10"
                                                     Background="{StaticResource PrimaryBrush}" 
                                                     HoverBackground="{StaticResource PrimaryHoverBrush}"
                                                     Foreground="White"/>

                                    <!-- Shadow button -->
                                    <local:SmartButton ButtonText="Shadow Button" FontSize="15"
                                                     HasShadow="True" Width="280" Height="40"
                                                     CornerRadius="5"
                                                     Background="{StaticResource SuccessBrush}" 
                                                     HoverBackground="{StaticResource SuccessHoverBrush}"
                                                     Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Color Variations -->
                        <Border Style="{StaticResource SectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="COLOR SYSTEM"/>
                                </Border>
                                <TextBlock Text="Modern Color Palette" Style="{StaticResource SectionHeaderStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <local:SmartButton ButtonText="Search" FontSize="13"
                                                     IconGeometry="{StaticResource SearchIcon}"
                                                     Grid.Column="0" Grid.Row="0"
                                                     Background="{StaticResource PrimaryBrush}"
                                                     HoverBackground="{StaticResource PrimaryHoverBrush}"
                                                     Foreground="White" IconBrush="White"
                                                     Width="130" Height="40" Margin="0,0,6,8"
                                                     CornerRadius="5"/>

                                    <local:SmartButton ButtonText="Success" FontSize="13"
                                                     IconGeometry="{StaticResource CheckIcon}"
                                                     Grid.Column="1" Grid.Row="0"
                                                     Background="{StaticResource SuccessBrush}"
                                                     HoverBackground="{StaticResource SuccessHoverBrush}"
                                                     Foreground="White" IconBrush="White"
                                                     Width="130" Height="40" Margin="6,0,0,8"
                                                     CornerRadius="5"/>

                                    <local:SmartButton ButtonText="Warning" FontSize="13"
                                                     IconGeometry="{StaticResource WarningIcon}"
                                                     Grid.Column="0" Grid.Row="1"
                                                     Background="{StaticResource WarningBrush}"
                                                     HoverBackground="{StaticResource WarningHoverBrush}"
                                                     Foreground="White" IconBrush="White"
                                                     Width="130" Height="40" Margin="0,0,6,8"
                                                     CornerRadius="5"/>

                                    <local:SmartButton ButtonText="Like" FontSize="13"
                                                     IconGeometry="{StaticResource HeartIcon}"
                                                     Grid.Column="1" Grid.Row="1"
                                                     Background="{StaticResource HeartBrush}"
                                                     HoverBackground="{StaticResource HeartHoverBrush}"
                                                     Foreground="White" IconBrush="White"
                                                     Width="130" Height="40" Margin="6,0,0,8"
                                                     CornerRadius="5"/>

                                    <local:SmartButton ButtonText="Download" FontSize="13"
                                                     IconGeometry="{StaticResource DownloadIcon}"
                                                     Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"
                                                     Background="{StaticResource DownloadBrush}"
                                                     HoverBackground="{StaticResource DownloadHoverBrush}"
                                                     Foreground="White" IconBrush="White"
                                                     Width="266" Height="40"
                                                     CornerRadius="5"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">

                        <!-- Developer Tools -->
                        <Border Style="{StaticResource SectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="DEVELOPER TOOLS"/>
                                </Border>
                                <TextBlock Text="Development Platforms" Style="{StaticResource SectionHeaderStyle}"/>
                                <StackPanel>
                                    <local:SmartButton ButtonText="GitHub" FontSize="15"
                                                     IconGeometry="{StaticResource GitHubIcon}"
                                                     IconSize="20"
                                                     Width="280" Height="48" Margin="0,0,0,12"
                                                     Background="{StaticResource GitHubBrush}"
                                                     HoverBackground="#32383F"
                                                     Foreground="White" IconBrush="White"
                                                     CornerRadius="8"/>

                                    <local:SmartButton ButtonText="Visual Studio" FontSize="15"
                                                     IconGeometry="{StaticResource VisualStudioIcon}"
                                                     IconSize="20"
                                                     Width="280" Height="48" Margin="0,0,0,12"
                                                     Background="{StaticResource VisualStudioBrush}"
                                                     HoverBackground="#68217A"
                                                     Foreground="White" IconBrush="White"
                                                     CornerRadius="8"/>

                                    <local:SmartButton ButtonText="LinkedIn" FontSize="15"
                                                     IconGeometry="{StaticResource LinkedInIcon}"
                                                     IconSize="20"
                                                     Width="280" Height="48"
                                                     Background="{StaticResource LinkedInBrush}"
                                                     HoverBackground="#004182"
                                                     Foreground="White" IconBrush="White"
                                                     CornerRadius="8"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Icon Positions -->
                        <Border Style="{StaticResource SectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="ICON LAYOUTS"/>
                                </Border>
                                <TextBlock Text="Icon Positions" Style="{StaticResource SectionHeaderStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <local:SmartButton ButtonText="Left Icon" 
                                                     IconGeometry="{StaticResource MicrosoftIcon}"
                                                     IconPosition="Left" IconSize="16"
                                                     Grid.Column="0" Grid.Row="0"
                                                     Width="130" Height="40" Margin="0,0,6,10"
                                                     CornerRadius="5"
                                                     Background="{StaticResource MicrosoftBrush}"
                                                     HoverBackground="#106EBE"
                                                     Foreground="White" IconBrush="White"/>

                                    <local:SmartButton ButtonText="Right Icon" 
                                                     IconGeometry="{StaticResource MicrosoftIcon}"
                                                     IconPosition="Right" IconSize="16"
                                                     Grid.Column="1" Grid.Row="0"
                                                     Width="130" Height="40" Margin="6,0,0,10"
                                                     CornerRadius="5"
                                                     Background="{StaticResource MicrosoftBrush}"
                                                     HoverBackground="#106EBE"
                                                     Foreground="White" IconBrush="White"/>

                                    <local:SmartButton ButtonText="Top Icon" 
                                                     IconGeometry="{StaticResource MicrosoftIcon}"
                                                     IconPosition="Top" IconSize="20"
                                                     Grid.Column="0" Grid.Row="1"
                                                     Width="130" Height="60" Margin="0,0,6,0"
                                                     CornerRadius="5"
                                                     Background="{StaticResource MicrosoftBrush}"
                                                     HoverBackground="#106EBE"
                                                     Foreground="White" IconBrush="White"/>

                                    <local:SmartButton ButtonText="Bottom Icon" 
                                                     IconGeometry="{StaticResource MicrosoftIcon}"
                                                     IconPosition="Bottom" IconSize="20"
                                                     Grid.Column="1" Grid.Row="1"
                                                     Width="130" Height="60" Margin="6,0,0,0"
                                                     CornerRadius="5"
                                                     Background="{StaticResource MicrosoftBrush}"
                                                     HoverBackground="#106EBE"
                                                     Foreground="White" IconBrush="White"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Interactive States -->
                        <Border Style="{StaticResource SectionStyle}">
                            <StackPanel>
                                <Border Style="{StaticResource CategoryBadgeStyle}">
                                    <TextBlock Style="{StaticResource CategoryTextStyle}" Text="INTERACTIVE STATES"/>
                                </Border>
                                <TextBlock Text="Hover/Press Effects" Style="{StaticResource SectionHeaderStyle}"/>
                                <StackPanel>
                                    <local:SmartButton ButtonText="Sign in with GitHub" 
                                                     IconGeometry="{StaticResource GitHubIcon}"
                                                     Background="White" BorderBrush="{StaticResource Gray300}" BorderThickness="1"
                                                     Foreground="{StaticResource Gray700}" IconBrush="{StaticResource GitHubBrush}"
                                                     HoverBackground="{StaticResource GitHubBrush}"
                                                     HoverForeground="White" HoverIconBrush="White"
                                                     Width="280" Height="44" Margin="0,0,0,12"
                                                     CornerRadius="8"/>

                                    <local:SmartButton ButtonText="Install Visual Studio" 
                                                     IconGeometry="{StaticResource VisualStudioIcon}"
                                                     Background="{StaticResource VisualStudioBrush}"
                                                     HoverBackground="#68217A"
                                                     Foreground="White" IconBrush="White"
                                                     PressedScale="0.98"
                                                     Width="280" Height="44" Margin="0,0,0,16"
                                                     CornerRadius="8"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <local:SmartButton IconGeometry="{StaticResource SearchIcon}"
                                                         DisplayMode="IconOnly" IconSize="20"
                                                         Width="56" Height="56" Margin="0,0,12,0"
                                                         CornerRadius="28"
                                                         Background="{StaticResource PrimaryBrush}"
                                                         HoverBackground="{StaticResource PrimaryHoverBrush}"
                                                         IconBrush="White" HasShadow="True"/>

                                        <local:SmartButton ButtonText="Continue with Google" 
                                                         IconGeometry="{StaticResource GoogleIcon}"
                                                         Background="White" BorderBrush="{StaticResource Gray300}" BorderThickness="1"
                                                         Foreground="{StaticResource Gray700}" IconBrush="{StaticResource GoogleBrush}"
                                                         HoverBackground="{StaticResource Gray50}"
                                                         Width="200" Height="56"
                                                         CornerRadius="8"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Full Width Sections -->

                <!-- Display Modes -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource CategoryBadgeStyle}">
                            <TextBlock Style="{StaticResource CategoryTextStyle}" Text="DISPLAY MODES"/>
                        </Border>
                        <TextBlock Text="Display Modes" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <local:SmartButton ButtonText="Text Only" 
                                             DisplayMode="TextOnly"
                                             CornerRadius="5"
                                             Width="120" Height="40" Margin="10"
                                             Background="{StaticResource PrimaryBrush}" 
                                             HoverBackground="{StaticResource PrimaryHoverBrush}"
                                             Foreground="White"/>

                            <local:SmartButton IconGeometry="{StaticResource SearchIcon}"
                                            DisplayMode="IconOnly" IconSize="24"
                                            Width="50" Height="50" Margin="10"
                                            CornerRadius="25" HasShadow="True"
                                            Background="{StaticResource PrimaryBrush}"
                                            HoverBackground="{StaticResource PrimaryHoverBrush}"
                                            IconBrush="White"/>

                            <local:SmartButton ButtonText="Icon and Text" 
                                            CornerRadius="5"
                                            IconGeometry="{StaticResource SearchIcon}"
                                            DisplayMode="IconAndText" IconSize="18"
                                            Width="180" Height="40" Margin="10"
                                            Background="{StaticResource PrimaryBrush}" 
                                            HoverBackground="{StaticResource PrimaryHoverBrush}"
                                            Foreground="White" IconBrush="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Custom Hover/Press Effects -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource CategoryBadgeStyle}">
                            <TextBlock Style="{StaticResource CategoryTextStyle}" Text="CUSTOM EFFECTS"/>
                        </Border>
                        <TextBlock Text="Custom Hover/Press Effects" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <local:SmartButton ButtonText="Custom Hover" 
                                             CornerRadius="5"
                                             Background="{StaticResource PrimaryLightBrush}"
                                             HoverBackground="{StaticResource PrimaryBrush}"
                                             HoverForeground="White"
                                             Foreground="{StaticResource PrimaryBrush}"
                                             Width="160" Height="40" Margin="10"/>

                            <local:SmartButton ButtonText="Press Effect" 
                                             CornerRadius="5"
                                             Background="{StaticResource SuccessLightBrush}"
                                             PressedBackground="{StaticResource SuccessBrush}"
                                             PressedForeground="White"
                                             PressedScale="0.9"
                                             Foreground="{StaticResource SuccessBrush}"
                                             Width="160" Height="40" Margin="10"/>

                            <local:SmartButton ButtonText="Icon Color Change" 
                                             CornerRadius="5"
                                             IconGeometry="{StaticResource HeartIcon}"
                                             Background="{StaticResource HeartLightBrush}"
                                             IconBrush="{StaticResource HeartBrush}"
                                             HoverIconBrush="White"
                                             HoverBackground="{StaticResource HeartBrush}"
                                             Foreground="{StaticResource HeartBrush}"
                                             HoverForeground="White"
                                             Width="180" Height="40" Margin="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Various Sizes and Shapes -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource CategoryBadgeStyle}">
                            <TextBlock Style="{StaticResource CategoryTextStyle}" Text="SIZES &amp; SHAPES"/>
                        </Border>
                        <TextBlock Text="Various Sizes and Shapes" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <local:SmartButton ButtonText="Small" 
                                             IconGeometry="{StaticResource GitHubIcon}"
                                             Width="100" Height="30" Margin="10"
                                             FontSize="11" IconSize="12"
                                             Background="{StaticResource GitHubBrush}"
                                             HoverBackground="#32383F"
                                             Foreground="White" IconBrush="White"/>

                            <local:SmartButton ButtonText="Medium" 
                                             IconGeometry="{StaticResource SearchIcon}"
                                             Width="140" Height="40" Margin="10"
                                             FontSize="14" IconSize="16"
                                             Background="{StaticResource PrimaryBrush}"
                                             HoverBackground="{StaticResource PrimaryHoverBrush}"
                                             Foreground="White" IconBrush="White"/>

                            <local:SmartButton ButtonText="Large" 
                                             IconGeometry="{StaticResource DownloadIcon}"
                                             Width="180" Height="50" Margin="10"
                                             FontSize="16" IconSize="20"
                                             Background="{StaticResource SuccessBrush}"
                                             HoverBackground="{StaticResource SuccessHoverBrush}"
                                             Foreground="White" IconBrush="White"/>

                            <local:SmartButton ButtonText="Round" 
                                             IconGeometry="{StaticResource AppleIcon}"
                                             Width="60" Height="60" Margin="10"
                                             CornerRadius="30" HasShadow="True"
                                             Background="{StaticResource AppleBrush}"
                                             HoverBackground="#424245"
                                             Foreground="White" IconBrush="White"
                                             IconPosition="Top" IconMargin="0 5 0 0" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Padding and Spacing Settings -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource CategoryBadgeStyle}">
                            <TextBlock Style="{StaticResource CategoryTextStyle}" Text="SPACING"/>
                        </Border>
                        <TextBlock Text="Padding and Spacing Settings" Style="{StaticResource SectionHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <local:SmartButton ButtonText="Wide Padding Button" 
                                             IconGeometry="{StaticResource VisualStudioIcon}"
                                             ContentPadding="20,10,20,10"
                                             IconTextSpacing="15"
                                             Width="220" Height="50" Margin="10"
                                             Background="{StaticResource VisualStudioBrush}"
                                             HoverBackground="#68217A"
                                             Foreground="White" IconBrush="White"/>


                            <local:SmartButton ButtonText="Icon Margin" 
                                             IconGeometry="{StaticResource HeartIcon}"
                                             IconMargin="5,0,10,0"
                                             TextMargin="10,0,5,0"
                                             Width="160" Height="40" Margin="10"
                                             Background="{StaticResource HeartBrush}"
                                             HoverBackground="{StaticResource HeartHoverBrush}"
                                             Foreground="White" IconBrush="White"/>

                            <local:SmartButton ButtonText="Compact Button" 
                                             IconGeometry="{StaticResource LinkedInIcon}"
                                             ContentPadding="5,2,5,2"
                                             IconTextSpacing="5"
                                             Width="140" Height="30" Margin="10"
                                             Background="{StaticResource LinkedInBrush}"
                                             HoverBackground="#1085D1"
                                             Foreground="White" IconBrush="White"/>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Real Usage Examples -->
                <Border Style="{StaticResource SectionStyle}">
                    <StackPanel>
                        <Border Style="{StaticResource CategoryBadgeStyle}">
                            <TextBlock Style="{StaticResource CategoryTextStyle}" Text="REAL EXAMPLES"/>
                        </Border>
                        <TextBlock Text="Real Usage Examples" Style="{StaticResource SectionHeaderStyle}"/>

                        <!-- Toolbar Style -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Toolbar Style:" FontWeight="Bold" Margin="0,0,0,10" 
                                      Foreground="{StaticResource Gray600}" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <local:SmartButton IconGeometry="{StaticResource LinkedInIcon}"
                                                 DisplayMode="IconOnly" IconSize="16" ContentPadding="0"
                                                 Width="35" Height="35" Margin="2"
                                                 Background="Transparent" BorderBrush="{StaticResource Gray400}"
                                                 IconBrush="{StaticResource Gray600}"
                                                 HoverBackground="{StaticResource Gray200}"/>

                                <local:SmartButton IconGeometry="{StaticResource GitHubIcon}"
                                                 DisplayMode="IconOnly" IconSize="12" ContentPadding="0"
                                                 Width="35" Height="35" Margin="2"
                                                 Background="Transparent" BorderBrush="{StaticResource Gray400}"
                                                 IconBrush="{StaticResource Gray600}"
                                                 HoverBackground="{StaticResource Gray200}"/>

                                <local:SmartButton IconGeometry="{StaticResource VisualStudioIcon}"
                                                 DisplayMode="IconOnly" IconSize="16" ContentPadding="0"
                                                 Width="35" Height="35" Margin="2"
                                                 Background="Transparent" BorderBrush="{StaticResource Gray400}"
                                                 IconBrush="{StaticResource Gray600}"
                                                 HoverBackground="{StaticResource Gray200}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Action Buttons:" FontWeight="Bold" Margin="0,0,0,10" 
                                      Foreground="{StaticResource Gray600}" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <local:SmartButton ButtonText="Save" 
                                                 IconGeometry="{StaticResource DownloadIcon}"
                                                 Background="{StaticResource SuccessBrush}"
                                                 HoverBackground="{StaticResource SuccessHoverBrush}"
                                                 Foreground="White" IconBrush="White"
                                                 Width="100" Height="35" Margin="5"
                                                 CornerRadius="3" HasShadow="True"/>

                                <local:SmartButton ButtonText="Cancel" 
                                                 Background="{StaticResource Gray400}"
                                                 HoverBackground="{StaticResource Gray500}"
                                                 Foreground="White"
                                                 Width="100" Height="35" Margin="5"
                                                 CornerRadius="3"/>

                                <local:SmartButton ButtonText="Delete" 
                                                 IconGeometry="{StaticResource HeartIcon}"
                                                 Background="{StaticResource HeartBrush}"
                                                 HoverBackground="{StaticResource HeartHoverBrush}"
                                                 Foreground="White" IconBrush="White"
                                                 Width="100" Height="35" Margin="5"
                                                 CornerRadius="3" HasShadow="True"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Social Button Style -->
                        <StackPanel>
                            <TextBlock Text="Social Button Style:" FontWeight="Bold" Margin="0,0,0,10" 
                                      Foreground="{StaticResource Gray600}" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <local:SmartButton ButtonText="Like" 
                                                 IconGeometry="{StaticResource HeartIcon}"
                                                 Background="White" BorderBrush="{StaticResource Gray300}"
                                                 Foreground="{StaticResource Gray600}" IconBrush="{StaticResource Gray600}"
                                                 HoverBackground="{StaticResource HeartLightBrush}"
                                                 HoverForeground="{StaticResource HeartBrush}"
                                                 HoverIconBrush="{StaticResource HeartBrush}"
                                                 Width="120" Height="40" Margin="5"
                                                 CornerRadius="20" HasShadow="True"/>

                                <local:SmartButton ButtonText="Download" 
                                                 IconGeometry="{StaticResource DownloadIcon}"
                                                 Background="White" BorderBrush="{StaticResource Gray300}"
                                                 Foreground="{StaticResource Gray600}" IconBrush="{StaticResource Gray600}"
                                                 HoverBackground="{StaticResource PrimaryLightBrush}"
                                                 HoverForeground="{StaticResource PrimaryBrush}"
                                                 HoverIconBrush="{StaticResource PrimaryBrush}"
                                                 Width="140" Height="40" Margin="5"
                                                 CornerRadius="20" HasShadow="True"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>