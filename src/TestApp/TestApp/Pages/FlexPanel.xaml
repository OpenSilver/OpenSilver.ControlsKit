                            </Border>
                        </StackPanel>

                        <!--  Justify - SpaceAuto  -->
                        <StackPanel Margin="12">
                            <TextBlock Style="{StaticResource SubTitleStyle}" Text="⬜⬜🟦⬜🟦⬜⬜ Justify - SpaceAuto" />
                            <Border>
                                <controlskit:FlexPanel
                                    Align="Center"
                                    Justify="SpaceAuto"
                                    Orientation="Vertical">
                                    <Grid
                                        Width="50"
                                        Height="50"
                                        Background="Red" />
                                    <Grid
                                        Width="50"
                                        Height="50"
                                        Background="Green" />
                                    <Grid
                                        Width="50"
                                        Height="50"
                                        Background="Blue" />
                                </controlskit:FlexPanel>
                            </Border>
                        </StackPanel>

                    </controlskit:FlexPanel>
                    <controlskit:FlexPanel Justify="SpaceAuto" Orientation="Horizontal">
                        <!--  Justify - SpaceEvenly  -->
                        <StackPanel Margin="12">
                            <TextBlock Style="{StaticResource SubTitleStyle}" Text="🟦⬜🟦⬜🟦 Justify - SpaceEvenly" />
                            <Border>
                                <controlskit:FlexPanel
                                    Align="Center"
                                    Justify="SpaceEvenly"
                                    Orientation="Vertical">
                                    <Grid
                                        Width="50"
