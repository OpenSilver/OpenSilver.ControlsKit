                            <controlskit:FlexPanel
                                Align="Center"
                                Justify="Center"
                                Orientation="Horizontal">
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Red" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Green" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Blue" />
                            </controlskit:FlexPanel>
                        </Border>
                    </StackPanel>

                    <!--  Justify - End  -->
                    <StackPanel Margin="12">
                        <TextBlock Style="{StaticResource SubTitleStyle}" Text="⬜⬜⬜🟦 Justify - End" />
                        <Border>
                            <controlskit:FlexPanel
                                Align="Center"
                                Justify="End"
                                Orientation="Horizontal">
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Red" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Green" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Blue" />
                            </controlskit:FlexPanel>
                        </Border>
                    </StackPanel>

                    <!--  Justify - SpaceAround  -->
                    <StackPanel Margin="12">
                        <TextBlock Style="{StaticResource SubTitleStyle}" Text="⬜🟦⬜🟦⬜ Justify - SpaceAround" />
                        <Border>
                            <controlskit:FlexPanel
                                Align="Center"
                                Justify="SpaceAround"
                                Orientation="Horizontal">
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Red" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Green" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Blue" />
                            </controlskit:FlexPanel>
                        </Border>
                    </StackPanel>

                    <!--  Justify - SpaceAuto  -->
                    <StackPanel Margin="12">
                        <TextBlock Style="{StaticResource SubTitleStyle}" Text="⬜⬜🟦⬜🟦⬜⬜ Justify - SpaceAuto" />
                        <Border>
                            <controlskit:FlexPanel
                                Align="Center"
