                            </Border>
                        </StackPanel>

                        <!--  Algin - End  -->
                        <StackPanel Margin="12">
                            <TextBlock Style="{StaticResource SubTitleStyle}" Text="↘️ Algin - End" />
                            <Border>
                                <controlskit:FlexPanel
                                    Align="End"
                                    Justify="Start"
                                    Orientation="Vertical">
                                    <Grid
