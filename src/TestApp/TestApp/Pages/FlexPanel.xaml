                                        Background="Red" />
                                    <Grid
                                        Width="50"
                                        Height="50"
                                        Background="Green" />
                                    <Grid
                                        Width="50"
                                        Height="50"
                                        Background="Blue" />
                                </controlskit:FlexPanel>
                            </Border>
                        </StackPanel>
                    </controlskit:FlexPanel>
                    <controlskit:FlexPanel Justify="SpaceAuto" Orientation="Horizontal">
                        <!--  Justify - SpaceAround  -->
                        <StackPanel Margin="12">
                            <TextBlock Style="{StaticResource SubTitleStyle}" Text="⬜🟦⬜🟦⬜ Justify - SpaceAround" />
                            <Border>
                                <controlskit:FlexPanel
                                    Align="Center"
