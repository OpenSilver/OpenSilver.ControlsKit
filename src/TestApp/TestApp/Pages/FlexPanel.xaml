<Page
    x:Class="TestApp.Pages.FlexPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controlskit="clr-namespace:OpenSilver.ControlsKit;assembly=OpenSilver.ControlsKit.Controls"
    xmlns:local="clr-namespace:TestApp.Pages">
    <Page.Resources>

        <!--  Common Title Style  -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#374151" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>

        <!--  Sub Title Style  -->
        <Style x:Key="SubTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#374151" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>
    </Page.Resources>
    <StackPanel Margin="32">

        <!--  Title  -->
        <TextBlock
            Margin="0,0,0,24"
            HorizontalAlignment="Center"
            FontSize="28"
            FontWeight="Bold"
            Foreground="#1F2A44"
            Text="🚀 FlexPanel Showcase" />
        <TabControl>
            <TabItem Header="Horizontal">
                <TabItem.Resources>
                    <Style TargetType="Border">
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="BorderBrush" Value="Black" />
                        <Setter Property="Height" Value="70" />
                    </Style>
                </TabItem.Resources>
                <StackPanel Margin="32">
                    <!--  Algin  -->
                    <TextBlock Style="{StaticResource SectionTitleStyle}" Text="📐 Algin" />

                    <!--  Algin - Start  -->
                    <StackPanel Margin="12">
                        <TextBlock Style="{StaticResource SubTitleStyle}" Text="↖️ Algin - Start" />
                        <Border>
                            <controlskit:FlexPanel
                                Align="Start"
                                Justify="Start"
                                Orientation="Horizontal">
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Red" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Green" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Blue" />
                            </controlskit:FlexPanel>
                        </Border>
                    </StackPanel>

                    <!--  Algin - Center  -->
                    <StackPanel Margin="12">
                        <TextBlock Style="{StaticResource SubTitleStyle}" Text="🔲 Algin - Center" />
                        <Border>
                            <controlskit:FlexPanel
                                Align="Center"
                                Justify="Start"
                                Orientation="Horizontal">
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Red" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Green" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Blue" />
                            </controlskit:FlexPanel>
                        </Border>
                    </StackPanel>

                    <!--  Algin - End  -->
                    <StackPanel Margin="12">
                        <TextBlock Style="{StaticResource SubTitleStyle}" Text="↘️ Algin - End" />
                        <Border>
                            <controlskit:FlexPanel
                                Align="End"
                                Justify="Start"
                                Orientation="Horizontal">
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Red" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Green" />
                                <Grid
                                    Width="50"
                                    Height="50"
                                    Background="Blue" />
                            </controlskit:FlexPanel>
                        </Border>
                    </StackPanel>

                    <!--  Justify  -->
                    <TextBlock Style="{StaticResource SectionTitleStyle}" Text="📏 Justify Style" />

                    <!--  Justify - Start  -->
                    <StackPanel Margin="12">
                        <TextBlock Style="{StaticResource SubTitleStyle}" Text="🟦⬜⬜⬜ Justify - Start" />
