                                        Background="Blue" />
                                </controlskit:FlexPanel>
                            </Border>
                        </StackPanel>
                    </controlskit:FlexPanel>

                    <!--  Justify  -->
                    <TextBlock Style="{StaticResource SectionTitleStyle}" Text="📏 Justify Style" />
                    <controlskit:FlexPanel Justify="SpaceAuto" Orientation="Horizontal">
                        <!--  Justify - Start  -->
                        <StackPanel Margin="12">
